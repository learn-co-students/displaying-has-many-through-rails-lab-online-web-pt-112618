<h1>Doctor <%= @doctor.name %></h1>
<h2>Department: <%= @doctor.department %></h2>
<h3>Appointments:</h3>

<% @doctor.appointments.each do |appt| %>
  <%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %><br>
  with patient: <%= link_to appt.patient.name, patient_path(appt.patient) %><br><br>
<% end %>
